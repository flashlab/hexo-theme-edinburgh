<div class="col-md-6 col-12 mb-4">
  <div class="hovereffect">
    <a href="<%- config.root %><%- item.path %>">
      <img class="img-fluid portfolio-img" src="<%- item.cover_image || theme.default_cover_image %>" alt="<%- item.title || theme.default_post_title || "Untitled" %>">
      <div class="overlay">
        <div class="overlay-text">
        <p><%- item.title || theme.default_post_title || "Untitled" %></p>
        <p><%- item.date.fromNow() %></p>
      </div>
      </div>
    </a>
  </div>
</div>
